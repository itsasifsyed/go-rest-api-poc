# -------------------------------
# Web Server Configuration
# -------------------------------
ENV=local
WEB_PORT=8080        # comma-separated list of allowed origins
ENABLE_SWAGGER=true
READ_TIMEOUT=5s       # duration in Go format: 5s, 1m, etc.
WRITE_TIMEOUT=10s    # duration in Go format: 5s, 1m, etc.
CORS_ORIGINS=http://localhost:3000
# -------------------------------
# Database Configuration
# -------------------------------

POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=rest_api_poc_db
POSTGRES_PORT=5432
DB_RETRY_COUNT=5
DB_CONNECTION_STRING=postgres://postgres:postgres@localhost:5432/rest_api_poc_db?sslmode=disable
# -------------------------------
# Cache / Redis Configuration
# -------------------------------
ENABLE_CACHE=false
REDIS_PASSWORD=        # leave empty if no password
REDIS_DB=0
REDIS_TTL=1h           # TTL for cache entries, in Go duration format
REDIS_PORT=6379
REDIS_MAXMEMORY=256mb
REDIS_EVICTION_POLICY=volatile-lfu

# -------------------------------
# Authentication / JWT
# -------------------------------
JWT_SECRET=your-super-secret-key-change-in-production-min-32-chars
JWT_ISSUER=go-rest-api-poc
JWT_AUDIENCE=go-rest-api-poc
ACCESS_TOKEN_LIFETIME=15m
REFRESH_TOKEN_LIFETIME=168h
STAY_SIGNED_IN_LIFETIME=720h
PASSWORD_RESET_OTP_LIFETIME=15m


