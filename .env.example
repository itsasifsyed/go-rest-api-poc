# -------------------------------
# Web Server Configuration
# -------------------------------
ENV=dev
WEB_PORT=8080
CORS_ORIGINS=*           # comma-separated list of allowed origins
ENABLE_SWAGGER=true
READ_TIMEOUT=5s       # duration in Go format: 5s, 1m, etc.
WRITE_TIMEOUT=10s    # duration in Go format: 5s, 1m, etc.

# -------------------------------
# Database Configuration
# -------------------------------
DB_CONNECTION_STRING=postgres://user:password@localhost:5432/mydb?sslmode=disable

# -------------------------------
# Cache / Redis Configuration
# -------------------------------
ENABLE_CACHE=false
REDIS_ADDRESS=localhost:6379
REDIS_PASSWORD=        # leave empty if no password
REDIS_DB=0
REDIS_TTL=1h           # TTL for cache entries, in Go duration format

# -------------------------------
# Authentication / JWT
# -------------------------------
JWT_SECRET=your_jwt_secret_here
JWT_ISSUER=myapp
JWT_AUDIENCE=myapp      # comma-separated if multiple audiences
